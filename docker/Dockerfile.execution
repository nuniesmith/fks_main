# Custom Dockerfile for FKS Execution Service
FROM rust:slim AS build

ARG SERVICE_DIR=./src/services/execution

WORKDIR /src

# Install build dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    pkg-config \
    libssl-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy Cargo files and source
COPY ${SERVICE_DIR}/Cargo.toml ${SERVICE_DIR}/Cargo.lock* ./
COPY ${SERVICE_DIR}/src ./src

# Build once with all real code
RUN cargo build --release

# Runtime stage
FROM debian:bookworm-slim AS final
WORKDIR /app

RUN apt-get update && apt-get install -y --no-install-recommends ca-certificates curl \
    && rm -rf /var/lib/apt/lists/*

# Copy binary
COPY --from=build /src/target/release/fks_execution /usr/local/bin/fks_execution

# Create non-root user
# RUN useradd -r -u 1088 appuser
# USER appuser

EXPOSE 8004

CMD ["/usr/local/bin/fks_execution", "--listen", "0.0.0.0:8004"]

HEALTHCHECK --interval=30s --timeout=5s --start-period=10s --retries=3 \
    CMD curl -f http://localhost:8004/health || exit 1
