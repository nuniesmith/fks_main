---
# FKS Trading Platform Secrets Template
# Copy this file to fks-secrets.yaml and fill in actual values
# DO NOT commit fks-secrets.yaml to version control!

apiVersion: v1
kind: Secret
metadata:
  name: fks-secrets
  namespace: fks-trading
type: Opaque
stringData:
  # PostgreSQL credentials
  postgres-user: "trading_user"
  postgres-password: "CHANGE_ME_STRONG_PASSWORD"
  
  # Django secret key (generate with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())')
  django-secret-key: "CHANGE_ME_DJANGO_SECRET_KEY_50_CHARS_MIN"
  
  # OpenAI API key (optional, for AI service)
  openai-api-key: "sk-CHANGE_ME_OR_DELETE_IF_NOT_USING"
  
  # Slack webhook for alerts (from Alertmanager config)
  slack-webhook-url: "https://hooks.slack.com/services/YOUR/WEBHOOK/URL"
  
  # Exchange API keys (for CCXT integration)
  binance-api-key: "CHANGE_ME_BINANCE_API_KEY"
  binance-api-secret: "CHANGE_ME_BINANCE_API_SECRET"
  
  # Additional exchange keys as needed
  # coinbase-api-key: ""
  # coinbase-api-secret: ""
  # kraken-api-key: ""
  # kraken-api-secret: ""
